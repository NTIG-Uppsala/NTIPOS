<UserControl x:Class="PointOfSale.View.UserControls.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="{x:Type local:CategoryButton}">
                    <Setter Property="Margin" Value="0,0,10,0"/>
                </Style>
            </StackPanel.Resources>
            <local:CategoryButton CategoryName="Tobak" CategoryColor="SaddleBrown"/>
            <local:CategoryButton CategoryName="Godis" CategoryColor="LightPink"/>
            <local:CategoryButton CategoryName="Mat" CategoryColor="Orange"/>
            <local:CategoryButton CategoryName="Tidningar" CategoryColor="LightBlue"/>
        </StackPanel>

        <WrapPanel>
            
        </WrapPanel>
    </Grid>
</UserControl>