<UserControl x:Class="PointOfSale.View.UserControls.ReceiptContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontSize="25">
    
    <Grid Background="#adadad">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- RECEIPT LIST DISPLAY -->
        <DataGrid Name="ReceiptsView"
                  Grid.Column="0" 
                  SelectionMode="Single" 
                  Margin="20" 
                  BorderBrush="black" 
                  BorderThickness="2" 
                  ItemsSource="{Binding Receipts}"
                  SelectedItem="{Binding SelectedItem}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserResizeColumns="False">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="DataGridCell.IsSelected" Value="True">
                            <Setter Property="Background" Value="Yellow" />
                            <Setter Property="BorderThickness" Value="0.5,1,0.5,1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Tid" Binding="{Binding Time}"/>
                <DataGridTextColumn Header="Summa" Binding="{Binding TotalSum, ConverterCulture='sv-SE', StringFormat={}{0:#,#.00}}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- RECEIPT INFO DISPLAY -->
        <Border Grid.Column="1" Margin="30,20" BorderBrush="Black" BorderThickness="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
                <ContentControl>
                    <ContentControl.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedItem}" Value="{x:Null}">
                                    <Setter Property="ContentControl.Visibility" Value="Hidden"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                    <StackPanel HorizontalAlignment="Center" Margin="10,30">
                        <StackPanel>

                            <!-- ARTICLE LIST DISPLAY -->
                            <TextBlock FontSize="40" FontWeight="DemiBold" TextAlignment="Center">ARTIKLAR:</TextBlock>
                            <ItemsControl ItemsSource="{Binding SelectedItem.ArticleList}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Column="0" Grid.Row="0" Name="ArticleName" TextWrapping="Wrap" Text="{Binding Product.Name}"/>
                                            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Margin="0 0 5 0">
                                                <TextBlock Name="ArticleQuantity" Text="{Binding Quantity}"/>
                                                <TextBlock Text=" x "/>
                                                <TextBlock Text="{Binding Product.PriceFormatted}"/>
                                                <TextBlock Text=" kr"/>
                                            </StackPanel>
                                            <Border Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Name="ArticleSum" DockPanel.Dock="Right" Text="{Binding SumFormatted}"/>
                                                    <TextBlock DockPanel.Dock="Right" Text=" kr"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- TOTAL SUM DISPLAY -->
                            <TextBlock FontSize="40" FontWeight="DemiBold" TextAlignment="Center" Margin="0,30,0,0">TOTAL PRIS:</TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SelectedItem.TotalSumFormatted}"/>
                                <TextBlock Text=" kr"/>
                            </StackPanel>
                            <TextBlock FontSize="30" FontWeight="DemiBold" TextAlignment="Center">VARAV MOMS:</TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="25% "/>
                                <TextBlock Text="AV "/>
                                <TextBlock Text="{Binding SelectedItem.TotalSumFormatted}"/>
                                <TextBlock Text=" = "/>
                                <TextBlock Text="{Binding SelectedItem.VATFormatted}"/>
                            </StackPanel>

                            <!-- FILLER -->
                            <ContentControl Height="70"/>
                        </StackPanel>
                    </StackPanel>
                </ContentControl>
            </ScrollViewer>
        </Border>
        
        <!-- PRINT BUTTON -->
        <local:GUIButton 
            x:Name="PrintButton" 
            Grid.Column="1" 
            Color="ForestGreen" 
            Width="120" 
            Height="60" 
            VerticalAlignment="Bottom" 
            Margin="0,0,0,30" 
            Label="Skriv ut" 
            Click="PrintButton_Click"/>
    </Grid>
</UserControl>
