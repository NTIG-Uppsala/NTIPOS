<UserControl x:Class="PointOfSale.View.UserControls.ReceiptContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#adadad">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView Grid.Column="0" Margin="20" BorderBrush="black" BorderThickness="2"/>

        <Border Grid.Column="1" Margin="30,20" BorderBrush="Black" BorderThickness="2">
            <Grid Background="White">

            </Grid>
        </Border>
    </Grid>
</UserControl>
