<UserControl x:Class="PointOfSale.View.UserControls.GUIButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Grid>
        <!-- mask for rounded corners-->
        <Border Name="mask" Grid.Row="1" CornerRadius="20" Background="white" />

        <Button Name="GUIbtn" FontWeight="Bold" >
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="{Binding Color}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="Border" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5 0"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <Button.OpacityMask>
                <VisualBrush Visual="{Binding ElementName=mask}"/>
            </Button.OpacityMask>
            <Grid >
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Label}"/>
                <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Text="{Binding Title}"/>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="{Binding Price}"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
