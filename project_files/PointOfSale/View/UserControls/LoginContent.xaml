<UserControl x:Class="PointOfSale.View.UserControls.LoginContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:adorners="http://gu.se/Adorners"
             xmlns:local="clr-namespace:PointOfSale.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#adadad">
    <UserControl.Resources>
        <Style x:Key="AdornerTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Opacity" Value="0.6" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Width" Value="400" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style x:Key="UrlTextStyle" BasedOn="{StaticResource AdornerTextStyle}" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="ForestGreen" />
            <Setter Property="Width" Value="auto" />
            <Setter Property="TextAlignment" Value="Left" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding LoginStatusMessage}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
            <TextBox Name="UserIDInput" Width="400" Height="60" HorizontalAlignment="Center" VerticalContentAlignment="Center" 
                     adorners:Watermark.Text="Anställnings-ID" adorners:Watermark.TextStyle="{StaticResource AdornerTextStyle}" adorners:Watermark.VisibleWhen="Empty"/>
            <TextBox Name="UserPasswordInput" Width="400" Height="60" HorizontalAlignment="Center" VerticalContentAlignment="Center" 
                     adorners:Watermark.Text="Lösenord" adorners:Watermark.TextStyle="{StaticResource AdornerTextStyle}" adorners:Watermark.VisibleWhen="Empty"/>
        </StackPanel>
        <StackPanel Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Name="LoginButton" FontWeight="SemiBold" Width="200" Height="60" FontSize="35" Click="LoginButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="Border" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoggedIn}" Value="false">
                                <Setter Property="Background" Value="ForestGreen"/>
                                <Setter Property="IsEnabled" Value="True"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsLoggedIn}" Value="true">
                                <Setter Property="Background" Value="Gray"/>
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Grid Margin="5">
                    <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" TextAlignment="Center" Text="Logga in"/>
                </Grid>
            </Button>

            <Button Name="LogoutButton" FontWeight="SemiBold" Width="200" Height="60" FontSize="35" Click="LogoutButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="Border" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoggedIn}" Value="false">
                                <Setter Property="Background" Value="Gray"/>
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsLoggedIn}" Value="true">
                                <Setter Property="Background" Value="Red"/>
                                <Setter Property="IsEnabled" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Grid Margin="5">
                    <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" TextAlignment="Center" Text="Logga ut"/>
                </Grid>
            </Button>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                <TextBlock Text="Produktdatabas-URL" TextWrapping="Wrap"/>
                <TextBox x:Name="APIURLInput" Height="60" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" KeyDown="APIURLInput_KeyDown"
                adorners:Watermark.Text="{Binding ApiUrl}" adorners:Watermark.TextStyle="{StaticResource UrlTextStyle}" adorners:Watermark.VisibleWhen="Empty"/>
            </StackPanel>

            <Button Grid.Column="1" Name="SetAPIURLButton" FontWeight="SemiBold" Width="200" Height="60" FontSize="30" Background="ForestGreen" Click="SetAPIURLButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="Border" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Grid Margin="5">
                    <TextBlock TextWrapping="WrapWithOverflow" VerticalAlignment="Center" TextAlignment="Center" Text="Sätt API URL"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</UserControl>
