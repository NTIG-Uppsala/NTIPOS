<UserControl x:Class="PointOfSale.View.UserControls.HeaderPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Background="#898989" Margin="0">
        <Button Name="SaleView" Grid.Column="0" Padding="4" Width="auto" Background="#adadad" BorderThickness="0" Content="Försäljning" Click="ViewButton_Click"/>
        <Button Name="ReceiptView" Grid.Column="1" Padding="4" Width="auto" BorderThickness="0" Content="Kvitto" Click="ViewButton_Click"/>
    </StackPanel>
</UserControl>
